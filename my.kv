#:kivy 1.0
<MyLabel@Label>:
    size_hint: 0.2, 0.1
    font_size: root.height / 2
    text_size: self.size
    halign: 'right'
    valign: 'center'

<MyInput@TextInput>:
    font_size: root.height / 2
    padding: [root.height / 5, (self.height-self.line_height)/2]
    multiline: False

<DialogScreen>:
    query_text: query_text
    res_per: res_per
    FloatLayout:
        MyLabel:
            text:"検索文字列:"
            pos_hint: {'x':0.2, 'y':0.8}
        MyInput:
            id: query_text
            pos_hint: {'x': 0.45 , 'y':0.8}
            size_hint: 0.35, 0.1
            hint_text: "組織名など"
        MyLabel:
            text:"'その他'にする 閾値[%]:"
            pos_hint: {'x':0.2, 'y':0.7}
        MyInput:
            id: res_per
            pos_hint: {'x': 0.45 , 'y':0.7}
            size_hint: 0.1, 0.1
            text: "10"
            hint_text: "割合"
            input_filter: 'int'
        MyLabel:
            text:"積極的:"
            pos_hint: {'x':0.2, 'y':0.6}
        CheckBox:
            active: root.res_aggressive
        MyLabel:
            text:"結果を毎回取得:"
            pos_hint: {'x':0.05, 'y':0.35}
        CheckBox:
            active: root.res_update
            pos_hint: {'x':0.55, 'y':0.35}
        MyLabel:
            text:"デバッグ:"
            pos_hint: {'x':0.05, 'y':0.2}
        CheckBox:
            active: root.debug
            pos_hint: {'x':0.55, 'y':0.2}
        Button:
            pos_hint:{'x':0.2, 'y':0.05}
            size_hint: 0.6, 0.2
            font_size: root.height / 3**2
            text: "Go!"
            on_release:
                root.on_go_btn_click()

<ProgressScreen>:
    query_label: query_label

    BoxLayout:
        orientation: "vertical"
        Label:
            id: query_label
            font_size: self.height
            text_size: self.size
            halign: 'left'
            pos_hint: {'x':0.05}
            size_hint: 0.9, 0.15



<ResultScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            size: (120, 60)
            size_hint: (None, None)
            font_size: root.height / 4**2
            text: "Back"
            on_release:
                root.manager.current = 'dialog'

<Popups>:
    errmsg: errmsg
    WrappedLabel:
        id: errmsg
        font_size: root.height / 7
        size_hint: 0.9, 0.5
        pos_hint: {'x':0.05, 'y':0.45}
    Button:
        text: "閉じる"
        font_size: root.height / 7
        size_hint: 1, 0.4
        pos_hint: {'x':0, 'y':0}
        on_release: root.popup_close()
